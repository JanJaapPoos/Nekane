doi = {10.1016/j.fishres.2007.06.023},
file = {:home/nekane/mendeley/Catchpole et al. - 2007 - The potential for new Nephrops trawl designs to positively effect North Sea stocks of cod , haddock and whitin.pdf:pdf},
isbn = {0165-7836},
issn = {01657836},
journal = {Fisheries Research},
keywords = {Cod,Discard,Haddock,Nephrops,North Sea,Stock,Trawl,Whiting},
number = {2-3},
pages = {262--267},
title = {{The potential for new Nephrops trawl designs to positively effect North Sea stocks of cod, haddock and whiting}},
