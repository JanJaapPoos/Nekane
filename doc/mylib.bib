file = {:home/nekane/mendeley/Sala et al. - 2015 - Is square-mesh better selective than larger mesh A perspective on the management for Mediterranean trawl fisheries.pdf:pdf},
isbn = {0165-7836},
issn = {01657836},
journal = {Fisheries Research},
keywords = {Aristaeomorpha foliacea,Diamond-mesh,Mullus barbatus,Selectivity,Square-mesh,Trawl fishery},
pages = {182--190},
