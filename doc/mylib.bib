number = {19},
pages = {4007--4019},
title = {{The European WFD at the age of 10: A critical review of the achievements with recommendations for the future}},
url = {http://www.sciencedirect.com/science/article/pii/S0048969710005462},
volume = {408},
year = {2010}
}
