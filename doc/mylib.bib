journal = {Fisheries Research},
keywords = {Bio-economic simulations,Cost-benefit analysis,Discards,Fisheries management,Nephrops norvegicus,Selectivity},
month = {jul},
number = {1},
pages = {76--89},
title = {{A cost-benefit analysis of improving trawl selectivity in the case of discards: The Nephrops norvegicus fishery in the Bay of Biscay}},
