doi = {10.1016/j.marpol.2015.11.006},
file = {:home/nekane/mendeley/Marine-protected-areas-and-fisheries-restricted-areas-in-the-Mediterranean-assessing-actual-marine-biodiversity-protection-coverage-at-m.pdf:pdf},
isbn = {0308-597X},
issn = {0308597X},
journal = {Marine Policy},
keywords = {Convention on Biological Diversity,Ecoregion,Fisheries Restricted Area,Marine protected area,Mediterranean Sea,Other Effective Area-Based Conservation Measure},
