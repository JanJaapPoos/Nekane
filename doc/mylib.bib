journal = {Aquatic Living Resources},
keywords = {Atlantic Ocean,Bay of Biscay,Bio-economic analysis,Demersal trawl fishery,Merluccius,Merluccius merluccius,Nephrops,Nephrops norvegicus,Nephrops norvegicus/Merluccius merluccius,Rexea solandri,Selective device,Selectivity,Simulation,atlantic ocean,bio-economic analysis,catch statistics,demersal trawl fishery,economic impact,experimental study,fishery management,lobster fishery,merluccius merluccius,nephrops norvegicus,selective device,selectivity,simulation,theoretical study,trawling},
