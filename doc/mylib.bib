journal = {Unpublished},
keywords = {and,food webs,harvest control rule,management strategy evaluation,structural instability,theoretical ecology},
pages = {36},
title = {{Maximum sustainable yield from interacting fish stocks in an uncertain world : two policy choices and underlying trade-offs}},
