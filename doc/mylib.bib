pages = {133--152},
title = {{An assessment of nets with a square mesh panel as a whiting conservation tool in the Irish Sea Nephrops fishery}},
url = {http://www.sciencedirect.com/science/article/pii/016578369290023M},
volume = {13},
year = {1992}
